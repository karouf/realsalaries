---
export interface Props {
	title?: string;
}
const { title = "Inflation Impact - Understand how inflation affects your salary" } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="Visualize how inflation has eroded your salary's purchasing power over time with our interactive calculator." />
		
		<!-- Open Graph / Social Media -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Visualize how inflation has eroded your salary's purchasing power over time with our interactive calculator." />
		<meta property="og:image" content="/og-image.png" />
		<meta property="twitter:card" content="summary_large_image" />
		
		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-gray-50 min-h-screen font-['Inter',sans-serif]">
		<header class="bg-tropical-1 text-white py-5 shadow-lg sticky top-0 z-50">
			<div class="container mx-auto px-4 flex justify-between items-center">
				<a href="/" class="text-2xl font-extrabold flex items-center">
					<span class="text-yellow-300 mr-1">ðŸ’¸ Real</span>Salaries
				</a>
				<button id="menu-toggle" class="sm:hidden text-white focus:outline-none">
					<svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path id="menu-bars" stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
				<nav class="hidden sm:flex items-center space-x-6">
					<a href="/" class="text-white hover:text-yellow-300 transition-colors">Home</a>
					<a href="/simulator" class="text-white hover:text-yellow-300 transition-colors py-2 px-4 rounded-lg hover:bg-white/10 border border-white/20 hover:border-white/40">Simulator</a>
				</nav>
			</div>
			<div id="menu-overlay" class="fixed inset-0 bg-gradient-to-br from-tropical-1 to-tropical-2 text-white hidden flex-col justify-center items-center">
				<div class="absolute inset-0 opacity-20 pointer-events-none">
					<svg class="absolute bottom-0 left-0 transform translate-y-52 -translate-x-96" width="2000" height="2000" fill="none">
          				<circle cx="1000" cy="1000" r="800" stroke="white" stroke-width="100" stroke-opacity="0.2" />
          				<circle cx="1000" cy="1000" r="400" stroke="white" stroke-width="100" stroke-opacity="0.4" />
        			</svg>
				</div>
				<button id="menu-close" class="absolute top-4 right-4 text-white focus:outline-none">
					<svg class="w-8 h-8" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
						<path stroke-linecap="round" stroke-linejoin="round" d="M6 6l12 12M6 18L18 6"></path>
					</svg>
				</button>
				<ul class="flex flex-col justify-center items-center h-full space-y-16 text-center">
					<li>
						<a href="/" class="text-3xl font-bold text-white py-4 px-8 rounded-lg">Home</a>
					</li>
					<li>
						<a href="/simulator" class="text-3xl font-bold text-white py-4 px-8 rounded-lg bg-white/10 border border-white/20">Simulator</a>
					</li>
				</ul>
			</div>
		</header>
		
		<slot />
		
		<footer class="bg-tropical-2 text-white py-12">
			<div class="container mx-auto px-6">
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
					<div>
						<h3 class="text-xl font-bold mb-4">About RealSalaries</h3>
						<p class="text-white/80">
							We help you understand the real impact of inflation on your earnings and purchasing power.
						</p>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Quick Links</h3>
						<ul class="space-y-2">
							<li><a href="/" class="text-white/80 hover:text-yellow-300 transition-colors">Home</a></li>
							<li><a href="/simulator" class="text-white/80 hover:text-yellow-300 transition-colors">Full Simulator</a></li>
						</ul>
					</div>
					<div>
						<h3 class="text-xl font-bold mb-4">Data Sources</h3>
						<p class="text-white/80">
							All inflation data is sourced from <a class="text-tropical-3 hover:text-tropical-4 underline decoration-dotted" href="https://data-explorer.oecd.org/">the OECD</a> (Organisation for Economic Co-operation and Development).
						</p>
					</div>
				</div>
				<div class="border-t border-white/20 pt-8 text-center">
					<p>Â© {new Date().getFullYear()} RealSalari.es - All rights reserved.</p>
				</div>
			</div>
		</footer>
		<script>
			const menuToggle = document.getElementById('menu-toggle');
			const menuOverlay = document.getElementById('menu-overlay');
			const menuClose = document.getElementById('menu-close');

			menuToggle.addEventListener('click', () => {
				menuOverlay.classList.toggle('hidden');
			});

			menuClose.addEventListener('click', () => {
				menuOverlay.classList.add('hidden');
			});
		</script>
	</body>
</html>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	:root {
		scroll-behavior: smooth;
	}
</style>
