---
import Layout from '../layouts/Layout.astro';
import SalarySimulator from '../components/SalarySimulator.tsx';
---

<Layout title="Inflation Impact Simulator - See how inflation affected your salary">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-tropical-1">Salary Inflation Impact Simulator</h1>
    <p class="text-lg mb-8 text-center max-w-3xl mx-auto text-tropical-2">
      Enter your salary history and country to visualize how inflation has eroded your purchasing power over time.
    </p>
    
    <div class="bg-white rounded-lg shadow-lg p-6 mb-10 border border-tropical-3/30">
      <SalarySimulator client:load />
    </div>
    
    <div class="text-center mt-10">
      <a href="/" class="text-tropical-5 hover:text-tropical-1 hover:underline transition-colors">‚Üê Back to Home</a>
    </div>
  </main>
</Layout>